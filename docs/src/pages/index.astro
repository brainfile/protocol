---
import { Icon } from '@astrojs/starlight/components';

const features = [
  {
    title: "Protocol First",
    description: "JSON Schema defines everything. Tools are built around the spec, not the other way around.",
    icon: "document"
  },
  {
    title: "AI Native",
    description: "Explicit agent instructions. Structured YAML. Designed for AI-assisted development from day one.",
    icon: "puzzle"
  },
  {
    title: "File Based",
    description: "Plain text markdown files with YAML frontmatter. Version control friendly. No databases.",
    icon: "open-book"
  },
  {
    title: "Visual Tools",
    description: "VSCode extension with kanban board UI. Drag and drop tasks. See changes in real-time.",
    icon: "laptop"
  },
  {
    title: "CLI Interface",
    description: "Powerful command-line tools. Create tasks, move columns, validate schemas. Automation ready.",
    icon: "seti:shell"
  },
  {
    title: "Templates",
    description: "Built-in templates for bugs, features, refactoring. Or create your own. Consistency at scale.",
    icon: "document"
  }
];
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brainfile - Protocol-first task management for AI-assisted development</title>
  <meta name="description" content="A protocol-first task management system. YAML + Markdown. AI native. File based.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300..700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      border-radius: 0 !important;
    }

    :root {
      --bg: #000000;
      --text: #FFFFFF;
      --text-muted: rgba(255, 255, 255, 0.6);
      --accent: #FFFFFF;
      --border: rgba(255, 255, 255, 0.08);
      --code-bg: #0A0A0A;

      --space-xs: 8px;
      --space-sm: 16px;
      --space-md: 24px;
      --space-lg: 32px;
      --space-xl: 48px;
      --space-2xl: 64px;
      --space-3xl: 96px;
      --space-4xl: 128px;
    }

    html[data-theme="light"] {
      --bg: #FFFFFF;
      --text: #000000;
      --text-muted: rgba(0, 0, 0, 0.6);
      --accent: #000000;
      --border: rgba(0, 0, 0, 0.08);
      --code-bg: #FAFAFA;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.7;
      letter-spacing: -0.01em;
      overflow-x: hidden;
    }

    ::selection {
      background: rgba(255, 255, 255, 0.1);
    }

    html[data-theme="light"] ::selection {
      background: rgba(0, 0, 0, 0.1);
    }

    /* Navigation */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
      height: 56px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 var(--space-lg);
    }

    html[data-theme="light"] nav {
      background: rgba(255, 255, 255, 0.9);
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 8px;
      text-decoration: none;
      color: var(--text);
    }

    .logo img {
      width: 32px;
      height: 32px;
      filter: brightness(0) invert(1);
    }

    html[data-theme="light"] .logo img {
      filter: brightness(0) invert(0);
    }

    .logo-text {
      font-weight: 600;
      font-size: 1.25rem;
      letter-spacing: -0.02em;
    }

    .nav-links {
      display: flex;
      gap: var(--space-lg);
      align-items: center;
    }

    .nav-links a {
      color: var(--text-muted);
      text-decoration: none;
      font-size: 0.9375rem;
      transition: all 0.2s;
      padding: var(--space-xs);
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid transparent;
    }

    .nav-links a:hover {
      color: var(--text);
      border-color: var(--border);
    }

    .nav-links a svg {
      width: 18px;
      height: 18px;
    }

    .theme-toggle {
      background: none;
      border: 1px solid var(--border);
      color: var(--text);
      padding: var(--space-xs);
      cursor: pointer;
      font-family: inherit;
      font-size: 0.9375rem;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .theme-toggle:hover {
      border-color: var(--accent);
    }

    .theme-toggle svg {
      width: 18px;
      height: 18px;
    }

    /* Hero Section */
    .hero {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: var(--space-4xl) var(--space-lg) var(--space-3xl);
      margin-top: 56px;
      border-bottom: 1px solid var(--border);
    }

    .hero-content {
      max-width: 720px;
      width: 100%;
      text-align: center;
    }

    .hero h1 {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
      letter-spacing: -0.04em;
      line-height: 1.1;
      margin-bottom: var(--space-md);
    }

    .hero p {
      font-size: clamp(1.125rem, 2vw, 1.5rem);
      color: var(--text-muted);
      margin-bottom: var(--space-xl);
      line-height: 1.5;
    }

    .cta-buttons {
      display: flex;
      gap: var(--space-md);
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      padding: var(--space-sm) var(--space-lg);
      font-size: 1rem;
      font-weight: 500;
      text-decoration: none;
      border: 1px solid var(--border);
      transition: all 0.2s;
      cursor: pointer;
      font-family: inherit;
      display: inline-block;
      background: transparent;
      color: var(--text);
    }

    .btn:hover {
      transform: translateY(-2px);
      border-color: var(--accent);
    }

    /* Code Example */
    .code-example {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-lg) var(--space-3xl);
    }

    .code-window {
      background: var(--code-bg);
      border: 1px solid var(--border);
      font-family: 'JetBrains Mono', 'SF Mono', Monaco, monospace;
      font-size: 0.875rem;
      line-height: 1.6;
      overflow: hidden;
    }

    .code-header {
      background: rgba(255, 255, 255, 0.03);
      border-bottom: 1px solid var(--border);
      padding: var(--space-sm) var(--space-md);
      display: flex;
      align-items: center;
      gap: var(--space-xs);
      font-size: 0.8125rem;
      color: var(--text-muted);
    }

    .code-body {
      padding: var(--space-md);
      overflow-x: auto;
    }

    .code-body pre {
      margin: 0;
      color: var(--text);
    }

    .comment {
      color: var(--text-muted);
    }

    .key {
      color: var(--text);
    }

    .value {
      color: var(--text-muted);
    }

    /* Features Section */
    .features {
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--space-3xl) var(--space-lg);
      border-bottom: 1px solid var(--border);
    }

    .section-title {
      font-size: clamp(1.75rem, 3vw, 2.5rem);
      font-weight: 700;
      letter-spacing: -0.03em;
      margin-bottom: var(--space-xl);
      text-align: center;
    }

    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: var(--space-lg);
    }

    .feature-card {
      border: 1px solid var(--border);
      border-left: 2px solid var(--border);
      padding: var(--space-lg);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      background: transparent;
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -2px;
      width: 2px;
      height: 0;
      background: var(--accent);
      transition: height 0.3s ease;
    }

    .feature-card:hover {
      border-color: var(--accent);
      transform: translateY(-4px);
    }

    .feature-card:hover::before {
      height: 100%;
    }

    .feature-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      letter-spacing: -0.02em;
      margin-bottom: var(--space-sm);
      transition: color 0.2s ease;
    }

    .feature-card:hover h3 {
      color: var(--accent);
    }

    .feature-card p {
      color: var(--text-muted);
      font-size: 0.9375rem;
    }

    /* Ecosystem Section */
    .ecosystem {
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--space-3xl) var(--space-lg);
    }

    .ecosystem-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-md);
    }

    .ecosystem-card {
      border: 1px solid var(--border);
      padding: var(--space-lg);
      transition: all 0.2s;
      background: transparent;
      text-decoration: none;
      color: var(--text);
      display: block;
    }

    .ecosystem-card:hover {
      border-color: var(--accent);
      transform: translateX(4px);
    }

    .ecosystem-card h3 {
      font-size: 1.125rem;
      font-weight: 600;
      letter-spacing: -0.02em;
      margin-bottom: var(--space-xs);
    }

    .ecosystem-card p {
      color: var(--text-muted);
      font-size: 0.875rem;
      line-height: 1.5;
    }

    /* Footer */
    footer {
      border-top: 1px solid var(--border);
      padding: var(--space-xl) var(--space-lg);
      text-align: center;
      color: var(--text-muted);
      font-size: 0.875rem;
    }

    footer a {
      color: var(--text);
      text-decoration: none;
      text-decoration: underline;
      text-decoration-color: var(--accent);
      text-underline-offset: 2px;
    }

    footer a:hover {
      text-decoration-thickness: 2px;
    }

    /* Responsive */
    @media (max-width: 768px) {
      nav {
        padding: 0 var(--space-md);
      }

      .nav-links {
        gap: var(--space-sm);
      }

      .hero {
        padding: var(--space-3xl) var(--space-md) var(--space-2xl);
      }

      .feature-grid,
      .ecosystem-grid {
        grid-template-columns: 1fr;
      }

      .cta-buttons {
        flex-direction: column;
      }

      .btn {
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <nav>
    <a href="/" class="logo">
      <img src="/favicon.svg" alt="Brainfile">
      <span class="logo-text">Brainfile</span>
    </a>
    <div class="nav-links">
      <a href="/getting-started/quick-start" title="Documentation">
        <svg width="18" height="18" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="2" width="10" height="12" rx="1"/>
          <line x1="6" y1="5" x2="10" y2="5"/>
          <line x1="6" y1="8" x2="10" y2="8"/>
          <line x1="6" y1="11" x2="9" y2="11"/>
        </svg>
      </a>
      <a href="https://github.com/brainfile" target="_blank" title="GitHub">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
      <button class="theme-toggle" id="themeToggle" title="Toggle theme">
        <svg class="sun-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="5"/>
          <line x1="12" y1="1" x2="12" y2="3"/>
          <line x1="12" y1="21" x2="12" y2="23"/>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
          <line x1="1" y1="12" x2="3" y2="12"/>
          <line x1="21" y1="12" x2="23" y2="12"/>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="moon-icon" style="display: none;" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
    </div>
  </nav>

  <section class="hero">
    <div class="hero-content">
      <h1>Protocol-first task management</h1>
      <p>YAML + Markdown. AI native. File based. Version controlled.</p>
      <div class="cta-buttons">
        <a href="/getting-started/quick-start" class="btn">Get Started</a>
        <a href="/protocol/specification" class="btn">Read Specification</a>
      </div>
    </div>
  </section>

  <section class="code-example">
    <div class="code-window">
      <div class="code-header">brainfile.md</div>
      <div class="code-body">
<pre><span class="comment"># YAML frontmatter defines structure</span>
<span class="key">schema</span>: https://brainfile.md/v1
<span class="key">title</span>: <span class="value">My Project</span>
<span class="key">agent</span>:
  <span class="key">instructions</span>:
    - Modify only the YAML frontmatter
    - Preserve all IDs
<span class="key">columns</span>:
  - <span class="key">id</span>: <span class="value">todo</span>
    <span class="key">title</span>: <span class="value">To Do</span>
    <span class="key">tasks</span>:
      - <span class="key">id</span>: <span class="value">task-1</span>
        <span class="key">title</span>: <span class="value">Implement user authentication</span>
        <span class="key">priority</span>: <span class="value">high</span>
        <span class="key">tags</span>: [backend, security]
---
<span class="comment"># Markdown content for context</span>
This is the task board for my project.</pre>
      </div>
    </div>
  </section>

  <section class="features">
    <h2 class="section-title">Built for AI-assisted development</h2>
    <div class="feature-grid">
      {features.map(feature => (
        <div class="feature-card">
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="ecosystem">
    <h2 class="section-title">Complete ecosystem</h2>
    <div class="ecosystem-grid">
      <a href="/protocol/specification" class="ecosystem-card">
        <h3>Protocol</h3>
        <p>JSON Schema specification. The canonical source of truth.</p>
      </a>
      <a href="/core/overview" class="ecosystem-card">
        <h3>Core Library</h3>
        <p>TypeScript library for parsing and validation.</p>
      </a>
      <a href="/cli/installation" class="ecosystem-card">
        <h3>CLI Tool</h3>
        <p>Command-line interface for automation.</p>
      </a>
      <a href="/vscode/extension" class="ecosystem-card">
        <h3>VSCode Extension</h3>
        <p>Visual kanban board in your editor.</p>
      </a>
    </div>
  </section>

  <footer>
    <p>
      Open source · <a href="https://github.com/brainfile/protocol" target="_blank">GitHub</a> · 
      <a href="https://github.com/brainfile/protocol/blob/main/CONTRIBUTING.md" target="_blank">Contributing</a>
    </p>
  </footer>

  <script>
    // Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    const html = document.documentElement;

    function updateThemeIcon(theme) {
      const sunIcon = themeToggle?.querySelector('.sun-icon');
      const moonIcon = themeToggle?.querySelector('.moon-icon');

      if (theme === 'dark') {
        sunIcon.style.display = 'block';
        moonIcon.style.display = 'none';
      } else {
        sunIcon.style.display = 'none';
        moonIcon.style.display = 'block';
      }
    }

    themeToggle?.addEventListener('click', () => {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      updateThemeIcon(newTheme);
    });

    // Load saved theme
    const savedTheme = localStorage.getItem('theme') || 'dark';
    html.setAttribute('data-theme', savedTheme);
    updateThemeIcon(savedTheme);
  </script>
</body>
</html>

