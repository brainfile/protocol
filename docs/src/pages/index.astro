---
import logo from '../assets/logo.png';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brainfile - The protocol AI agents can parse</title>
  <meta name="description" content="YAML structure + Markdown content. Git-friendly. AI agents can read and modify it.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      border-radius: 0 !important;
    }

    :root {
      --bg: #000000;
      --text: #FFFFFF;
      --text-muted: rgba(255, 255, 255, 0.6);
      --text-dim: rgba(255, 255, 255, 0.4);
      --accent: #FFFFFF;
      --accent-green: #00FF00;
      --border: rgba(255, 255, 255, 0.08);
      --border-strong: rgba(255, 255, 255, 0.12);
      --code-bg: #0A0A0A;
      --panel-bg: #0D0D0D;
      --space-xs: 8px;
      --space-sm: 16px;
      --space-md: 24px;
      --space-lg: 32px;
      --space-xl: 48px;
      --space-2xl: 64px;
    }

    html[data-theme="light"] {
      --bg: #FFFFFF;
      --text: #000000;
      --text-muted: rgba(0, 0, 0, 0.6);
      --text-dim: rgba(0, 0, 0, 0.4);
      --accent: #000000;
      --accent-green: #00AA00;
      --border: rgba(0, 0, 0, 0.08);
      --border-strong: rgba(0, 0, 0, 0.12);
      --code-bg: #F5F5F5;
      --panel-bg: #FAFAFA;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      letter-spacing: -0.01em;
      font-size: 15px;
      overflow-x: hidden;
    }

    ::selection {
      background: rgba(255, 255, 255, 0.1);
    }

    html[data-theme="light"] ::selection {
      background: rgba(0, 0, 0, 0.1);
    }

    /* Mobile-first Navigation */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
      height: 56px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 var(--space-md);
    }

    html[data-theme="light"] nav {
      background: rgba(255, 255, 255, 0.95);
    }

    @media (min-width: 768px) {
      nav {
        padding: 0 var(--space-lg);
      }
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 8px;
      text-decoration: none;
      color: var(--text);
    }

    .logo img {
      width: 28px;
      height: 28px;
    }

    .logo-text {
      font-family: 'JetBrains Mono', monospace;
      font-weight: 600;
      font-size: 1rem;
      letter-spacing: -0.02em;
    }

    /* Hamburger Menu */
    .hamburger {
      display: flex;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: 1px solid var(--border);
      padding: 8px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .hamburger:hover {
      border-color: var(--accent);
    }

    .hamburger span {
      display: block;
      width: 18px;
      height: 2px;
      background: var(--text);
      transition: all 0.2s;
    }

    @media (min-width: 768px) {
      .hamburger {
        display: none;
      }
    }

    /* Nav Right Container */
    .nav-right {
      display: flex;
      align-items: center;
      gap: var(--space-sm);
    }

    .nav-links {
      position: fixed;
      top: 56px;
      left: 0;
      right: 0;
      background: var(--bg);
      border-bottom: 1px solid var(--border);
      display: none;
      flex-direction: column;
      gap: 0;
      padding: 0;
      z-index: 99;
    }

    .nav-links.open {
      display: flex;
    }

    html[data-theme="light"] .nav-links {
      background: var(--bg);
    }

    @media (min-width: 768px) {
      .nav-links {
        position: static;
        display: flex;
        flex-direction: row;
        gap: var(--space-md);
        background: transparent;
        border: none;
        padding: 0;
        z-index: auto;
      }
    }

    .nav-links a {
      color: var(--text-muted);
      text-decoration: none;
      font-size: 0.875rem;
      transition: all 0.2s;
      padding: var(--space-md);
      border: none;
      border-bottom: 1px solid var(--border);
      font-family: 'JetBrains Mono', monospace;
    }

    @media (min-width: 768px) {
      .nav-links a {
        padding: var(--space-xs) var(--space-sm);
        border: 1px solid transparent;
        border-bottom: 1px solid transparent;
      }
    }

    .nav-links a:hover {
      color: var(--text);
      background: var(--code-bg);
    }

    @media (min-width: 768px) {
      .nav-links a:hover {
        background: transparent;
        border-color: var(--border);
      }
    }

    .theme-toggle {
      background: none;
      border: 1px solid var(--border);
      color: var(--text);
      padding: var(--space-xs);
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      font-size: 0;
    }

    .theme-toggle:hover {
      border-color: var(--accent);
    }

    .theme-toggle svg {
      width: 16px;
      height: 16px;
    }


    /* Main Content */
    main {
      max-width: 1200px;
      margin: 0 auto;
      padding: calc(56px + var(--space-lg)) var(--space-md) var(--space-2xl);
    }

    @media (min-width: 768px) {
      main {
        padding: calc(56px + var(--space-2xl)) var(--space-lg) var(--space-2xl);
      }
    }

    /* Hero */
    .hero {
      margin-bottom: var(--space-xl);
    }

    .hero-headline {
      font-family: 'JetBrains Mono', monospace;
      font-weight: 600;
      font-size: 0.875rem;
      letter-spacing: -0.02em;
      line-height: 1.4;
      margin-bottom: var(--space-sm);
      color: var(--text);
      word-break: normal;
      overflow-wrap: break-word;
    }

    @media (min-width: 400px) {
      .hero-headline {
        font-size: 1.125rem;
      }
    }

    @media (min-width: 640px) {
      .hero-headline {
        font-size: 1.75rem;
      }
    }

    @media (min-width: 768px) {
      .hero-headline {
        font-size: 2.5rem;
      }
    }

    .tagline {
      font-size: 1rem;
      color: var(--text-muted);
      margin-bottom: var(--space-sm);
      line-height: 1.6;
    }

    @media (min-width: 768px) {
      .tagline {
        font-size: 1.125rem;
        margin-bottom: var(--space-md);
      }
    }

    .subtagline {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.8125rem;
      color: var(--text-dim);
      margin-bottom: var(--space-lg);
    }

    /* Split View */
    .split-view {
      display: grid;
      gap: var(--space-md);
      margin-bottom: var(--space-xl);
    }

    @media (min-width: 900px) {
      .split-view {
        grid-template-columns: 1.2fr 1fr;
        gap: var(--space-lg);
      }
    }

    /* Code Block */
    .code-panel {
      background: var(--code-bg);
      border: 1px solid var(--border);
      overflow: hidden;
    }

    .code-header {
      padding: var(--space-sm) var(--space-md);
      border-bottom: 1px solid var(--border);
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      color: var(--text-dim);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .copy-btn {
      background: none;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 2px var(--space-xs);
      cursor: pointer;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.6875rem;
      transition: all 0.2s;
    }

    .copy-btn:hover {
      border-color: var(--accent);
      color: var(--text);
    }

    .copy-btn:active {
      background: var(--border);
    }

    .code-content {
      padding: var(--space-md);
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      line-height: 1.7;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    @media (min-width: 480px) {
      .code-content {
        font-size: 0.8125rem;
      }
    }

    .code-content pre {
      white-space: pre;
      margin: 0;
      color: var(--text);
    }

    .code-comment {
      color: var(--text-dim);
    }

    .code-key {
      color: var(--text);
    }

    .code-string {
      color: var(--accent-green);
    }

    /* Agent View Panel */
    .agent-panel {
      background: var(--panel-bg);
      border: 1px solid var(--border);
    }

    .agent-header {
      padding: var(--space-sm) var(--space-md);
      border-bottom: 1px solid var(--border);
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .agent-content {
      padding: var(--space-md);
    }

    .agent-item {
      display: flex;
      align-items: flex-start;
      gap: var(--space-sm);
      margin-bottom: var(--space-md);
      font-size: 0.875rem;
    }

    .agent-item:last-child {
      margin-bottom: 0;
    }

    .check-icon {
      color: var(--accent-green);
      font-family: 'JetBrains Mono', monospace;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .agent-label {
      color: var(--text-muted);
    }

    .agent-detail {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      color: var(--text-dim);
      margin-top: 4px;
    }

    /* Stats Bar */
    .stats {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1px;
      background: var(--border);
      border: 1px solid var(--border);
      margin-bottom: var(--space-xl);
    }

    @media (min-width: 640px) {
      .stats {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .stat-item {
      background: var(--bg);
      padding: var(--space-md);
      text-align: center;
    }

    .stat-label {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.6875rem;
      color: var(--text-dim);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 4px;
    }

    .stat-value {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      color: var(--text);
    }

    /* Sections */
    section {
      margin-bottom: var(--space-xl);
    }

    @media (min-width: 768px) {
      section {
        margin-bottom: var(--space-2xl);
      }
    }

    h2 {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      font-weight: 500;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      color: var(--text-dim);
      margin-bottom: var(--space-md);
    }

    .section-description {
      color: var(--text-muted);
      margin-bottom: var(--space-md);
      line-height: 1.7;
      font-size: 0.9375rem;
    }

    /* AI Integration Section */
    .integration-grid {
      display: grid;
      gap: var(--space-md);
    }

    @media (min-width: 768px) {
      .integration-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .integration-card {
      background: var(--code-bg);
      border: 1px solid var(--border);
      padding: var(--space-md);
    }

    .integration-title {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      color: var(--text);
      margin-bottom: var(--space-sm);
    }

    .integration-snippet {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      line-height: 1.7;
      color: var(--text-muted);
      white-space: pre-wrap;
      word-break: break-word;
    }

    /* Tools Section */
    .tools-grid {
      display: grid;
      gap: var(--space-sm);
    }

    @media (min-width: 640px) {
      .tools-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    .tool-card {
      border: 1px solid var(--border);
      padding: var(--space-md);
      text-decoration: none;
      color: var(--text);
      display: block;
      transition: all 0.2s;
    }

    .tool-card:hover {
      border-color: var(--border-strong);
      transform: translateX(2px);
    }

    .tool-title {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      margin-bottom: var(--space-xs);
      color: var(--text);
    }

    .tool-package {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.75rem;
      color: var(--text-dim);
      margin-bottom: var(--space-xs);
    }

    .tool-description {
      font-size: 0.8125rem;
      color: var(--text-muted);
      line-height: 1.5;
    }

    /* Footer */
    .footer-statement {
      text-align: center;
      padding: var(--space-lg) 0;
      color: var(--text-dim);
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.8125rem;
      border-top: 1px solid var(--border);
      margin-top: var(--space-xl);
    }

    /* Links */
    a:not(.logo):not(.tool-card):not(.nav-links a) {
      color: var(--text);
      text-decoration: underline;
      text-decoration-color: var(--text-muted);
      text-underline-offset: 2px;
      transition: all 0.2s;
    }

    a:not(.logo):not(.tool-card):not(.nav-links a):hover {
      text-decoration-color: var(--text);
    }

    /* Utility */
    .mobile-only {
      display: block;
    }

    @media (min-width: 768px) {
      .mobile-only {
        display: none;
      }
    }

    .desktop-only {
      display: none;
    }

    @media (min-width: 768px) {
      .desktop-only {
        display: block;
      }
    }
  </style>
</head>
<body>
  <nav>
    <a href="/" class="logo">
      <img src={logo.src} alt="Brainfile">
      <span class="logo-text">brainfile</span>
    </a>
    <div class="nav-right">
      <div class="nav-links" id="navLinks">
        <a href="/getting-started/quick-start">docs</a>
        <a href="/protocol/specification">spec</a>
        <a href="https://github.com/brainfile" target="_blank">github</a>
      </div>
      <button class="theme-toggle" id="themeToggle" title="Toggle theme">
        <svg class="sun-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"/>
          <line x1="12" y1="1" x2="12" y2="3"/>
          <line x1="12" y1="21" x2="12" y2="23"/>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
          <line x1="1" y1="12" x2="3" y2="12"/>
          <line x1="21" y1="12" x2="23" y2="12"/>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="moon-icon" style="display: none;" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
      <button class="hamburger" id="hamburger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </nav>

  <main>
    <!-- Hero -->
    <div class="hero">
      <h1 class="hero-headline">schema: https://brainfile.md/v1</h1>
      <p class="tagline">The protocol AI agents can parse. The format humans can read.</p>
      <p class="subtagline">// No databases. No lock-in. Just text.</p>
    </div>

    <!-- Split View: Human vs Machine -->
    <div class="split-view">
      <!-- Human View -->
      <div class="code-panel">
        <div class="code-header">
          <span>brainfile.md</span>
          <button class="copy-btn" data-copy="brainfile">[copy]</button>
        </div>
        <div class="code-content">
          <pre><span class="code-comment"># YAML frontmatter</span>
---
<span class="code-key">schema</span>: <span class="code-string">https://brainfile.md/v1</span>
<span class="code-key">columns</span>:
  - <span class="code-key">id</span>: in-progress
    <span class="code-key">tasks</span>:
      - <span class="code-key">id</span>: auth-1
        <span class="code-key">title</span>: Implement OAuth 2.0
        <span class="code-key">priority</span>: high
        <span class="code-key">tags</span>: [backend, security]
        <span class="code-key">subtasks</span>:
          - <span class="code-key">id</span>: auth-1-1
            <span class="code-key">title</span>: Set up credentials
            <span class="code-key">completed</span>: true
---

<span class="code-comment"># Markdown content</span>
Additional context for AI agents.</pre>
        </div>
      </div>

      <!-- Agent View -->
      <div class="agent-panel">
        <div class="agent-header">What AI sees</div>
        <div class="agent-content">
          <div class="agent-item">
            <span class="check-icon">✓</span>
            <div>
              <div class="agent-label">Schema validated</div>
              <div class="agent-detail">v1 spec enforced</div>
            </div>
          </div>
          <div class="agent-item">
            <span class="check-icon">✓</span>
            <div>
              <div class="agent-label">Tasks parsed</div>
              <div class="agent-detail">IDs preserved, structure intact</div>
            </div>
          </div>
          <div class="agent-item">
            <span class="check-icon">✓</span>
            <div>
              <div class="agent-label">Rules extracted</div>
              <div class="agent-detail">Agent instructions ready</div>
            </div>
          </div>
          <div class="agent-item">
            <span class="check-icon">✓</span>
            <div>
              <div class="agent-label">Context loaded</div>
              <div class="agent-detail">Markdown content available</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="stats">
      <div class="stat-item">
        <div class="stat-label">Format</div>
        <div class="stat-value">YAML + Markdown</div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Storage</div>
        <div class="stat-value">Git-tracked text</div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Agents</div>
        <div class="stat-value">Read & modify</div>
      </div>
    </div>

    <!-- AI Integration Patterns -->
    <section>
      <h2>How agents use this</h2>
      <p class="section-description">
        Drop brainfile.md in your repo. AI agents can read it, understand the structure, and follow your rules.
      </p>
      <div class="integration-grid">
        <div class="integration-card">
          <div class="integration-title">Claude / Cursor</div>
          <div class="integration-snippet">"Read brainfile.md and move
task-5 to done. Update the
completed timestamp."</div>
        </div>
        <div class="integration-card">
          <div class="integration-title">GitHub Copilot</div>
          <div class="integration-snippet">"Add a high priority task for
fixing the login bug to the
todo column."</div>
        </div>
        <div class="integration-card">
          <div class="integration-title">Any LLM</div>
          <div class="integration-snippet">"Parse the YAML, validate
against schema, extract all
tasks with priority=high."</div>
        </div>
        <div class="integration-card">
          <div class="integration-title">Your scripts</div>
          <div class="integration-snippet">cat brainfile.md | grep
'priority: high' | wc -l</div>
        </div>
      </div>
    </section>

    <!-- Why This Exists -->
    <section>
      <h2>Why this exists</h2>
      <p class="section-description">
        Working with AI agents on tasks is messy. Context is spread across tools. Changes aren't tracked.
        Brainfile is a file you commit. Tasks live in your repo. Agents follow explicit rules. Full git history.
      </p>
    </section>

    <!-- Tools -->
    <section>
      <h2>Official tools (optional)</h2>
      <div class="tools-grid">
        <a href="/core/overview" class="tool-card">
          <div class="tool-title">@brainfile/core</div>
          <div class="tool-package">npm install</div>
          <div class="tool-description">Parse, validate, and serialize</div>
        </a>
        <a href="/cli/installation" class="tool-card">
          <div class="tool-title">@brainfile/cli</div>
          <div class="tool-package">npm i -g</div>
          <div class="tool-description">Command-line interface</div>
        </a>
        <a href="/vscode/extension" class="tool-card">
          <div class="tool-title">VSCode Extension</div>
          <div class="tool-package">marketplace</div>
          <div class="tool-description">Visual kanban board</div>
        </a>
      </div>
    </section>

    <div class="footer-statement">
      That's it. It's a file format.
    </div>
  </main>

  <script>
    // Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    const html = document.documentElement;

    function updateThemeIcon(theme: string) {
      const sunIcon = themeToggle?.querySelector('.sun-icon') as HTMLElement | null;
      const moonIcon = themeToggle?.querySelector('.moon-icon') as HTMLElement | null;

      if (theme === 'dark') {
        if (sunIcon) sunIcon.style.display = 'block';
        if (moonIcon) moonIcon.style.display = 'none';
      } else {
        if (sunIcon) sunIcon.style.display = 'none';
        if (moonIcon) moonIcon.style.display = 'block';
      }
    }

    function toggleTheme() {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      updateThemeIcon(newTheme);
    }

    themeToggle?.addEventListener('click', toggleTheme);

    const savedTheme = localStorage.getItem('theme') || 'dark';
    html.setAttribute('data-theme', savedTheme);
    updateThemeIcon(savedTheme);

    // Hamburger menu
    const hamburger = document.getElementById('hamburger');
    const navLinks = document.getElementById('navLinks');

    hamburger?.addEventListener('click', () => {
      navLinks?.classList.toggle('open');
    });

    // Close menu when clicking a link
    navLinks?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navLinks?.classList.remove('open');
      });
    });

    // Copy functionality
    const brainfileContent = `---
schema: https://brainfile.md/v1
columns:
  - id: in-progress
    tasks:
      - id: auth-1
        title: Implement OAuth 2.0
        priority: high
        tags: [backend, security]
        subtasks:
          - id: auth-1-1
            title: Set up credentials
            completed: true
---

# Additional context for AI agents`;

    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(brainfileContent);
          const originalText = btn.textContent;
          btn.textContent = '[copied]';
          setTimeout(() => {
            btn.textContent = originalText;
          }, 2000);
        } catch (err) {
          console.error('Copy failed:', err);
        }
      });
    });
  </script>
