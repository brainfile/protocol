---
import schema from '../../../brainfile.schema.json';
const schemaJson = JSON.stringify(schema, null, 2);
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brainfile Schema v1</title>
  <meta name="description" content="JSON Schema for the Brainfile protocol v1">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      border-radius: 0 !important;
    }

    :root {
      --bg: #000000;
      --text: #FFFFFF;
      --text-muted: rgba(255, 255, 255, 0.6);
      --text-dim: rgba(255, 255, 255, 0.4);
      --border: rgba(255, 255, 255, 0.08);
      --code-bg: #0A0A0A;
    }

    html[data-theme="light"] {
      --bg: #FFFFFF;
      --text: #000000;
      --text-muted: rgba(0, 0, 0, 0.6);
      --text-dim: rgba(0, 0, 0, 0.4);
      --border: rgba(0, 0, 0, 0.08);
      --code-bg: #F5F5F5;
    }

    body {
      font-family: 'JetBrains Mono', monospace;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      font-size: 14px;
      padding: 24px;
      max-width: 1200px;
      margin: 0 auto;
    }

    ::selection {
      background: rgba(255, 255, 255, 0.1);
    }

    html[data-theme="light"] ::selection {
      background: rgba(0, 0, 0, 0.1);
    }

    header {
      border-bottom: 1px solid var(--border);
      padding-bottom: 24px;
      margin-bottom: 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
    }

    h1 {
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: -0.02em;
    }

    .actions {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }

    button, a.button {
      background: none;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 8px 16px;
      cursor: pointer;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.875rem;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
    }

    button:hover, a.button:hover {
      border-color: var(--text);
      color: var(--text);
    }

    button:active, a.button:active {
      background: var(--border);
    }

    .schema-container {
      background: var(--code-bg);
      border: 1px solid var(--border);
      padding: 24px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    pre {
      margin: 0;
      white-space: pre;
      color: var(--text);
      font-size: 13px;
      line-height: 1.7;
    }

    .json-key {
      color: var(--text);
    }

    .json-string {
      color: rgba(0, 255, 0, 0.8);
    }

    .json-number {
      color: rgba(100, 200, 255, 0.8);
    }

    .json-boolean {
      color: rgba(255, 100, 100, 0.8);
    }

    .message {
      position: fixed;
      bottom: 24px;
      right: 24px;
      background: var(--code-bg);
      border: 1px solid var(--border);
      padding: 12px 16px;
      font-size: 0.875rem;
      opacity: 0;
      transition: opacity 0.2s;
      pointer-events: none;
    }

    .message.show {
      opacity: 1;
    }

    @media (max-width: 640px) {
      body {
        padding: 16px;
        font-size: 12px;
      }

      h1 {
        font-size: 1.25rem;
      }

      .schema-container {
        padding: 16px;
      }

      pre {
        font-size: 11px;
      }

      .actions {
        width: 100%;
      }

      button, a.button {
        flex: 1;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>schema: https://brainfile.md/v1</h1>
    <div class="actions">
      <button id="copyBtn">[copy]</button>
      <a href="/v1.json" class="button" download="brainfile.schema.json">[download .json]</a>
      <a href="/" class="button">[‚Üê home]</a>
      <button id="themeToggle">[theme]</button>
    </div>
  </header>

  <div class="schema-container">
    <pre id="schema">{schemaJson}</pre>
  </div>

  <div class="message" id="message"></div>

  <script define:vars={{ schemaJson }}>
    // Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    const html = document.documentElement;

    function toggleTheme() {
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    }

    themeToggle?.addEventListener('click', toggleTheme);

    const savedTheme = localStorage.getItem('theme') || 'dark';
    html.setAttribute('data-theme', savedTheme);

    // Copy functionality
    const copyBtn = document.getElementById('copyBtn');
    const message = document.getElementById('message');

    copyBtn?.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(schemaJson);
        message.textContent = '[copied to clipboard]';
        message.classList.add('show');
        setTimeout(() => {
          message.classList.remove('show');
        }, 2000);
      } catch (err) {
        console.error('Copy failed:', err);
        message.textContent = '[copy failed]';
        message.classList.add('show');
        setTimeout(() => {
          message.classList.remove('show');
        }, 2000);
      }
    });
  </script>
</body>
</html>
